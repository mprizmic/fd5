{% extends 'base.html.twig' %}

{% block title %}Aviso index{% endblock %}

{% block body %}
    <h1>Aviso index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Descripcion</th>
                <th>Fecha</th>
                <th>Activo</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for aviso in avisos %}
            <tr>
                <td>{{ aviso.id }}</td>
                <td>{{ aviso.descripcion }}</td>
                <td>{{ aviso.fecha ? aviso.fecha|date('Y-m-d') : '' }}</td>
                <td>{{ aviso.activo ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('aviso_show', {'id': aviso.id}) }}">show</a>
                    <a href="{{ path('aviso_edit', {'id': aviso.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('aviso_new') }}">Create new</a>
{% endblock %}
