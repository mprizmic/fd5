{% extends 'base.html.twig' %}



{% block stylesheets %}
    {{ parent() }}
    <style>
        table, th, td {
            background-color: #f5f5f5;
            border: solid 1px;
            border-color: #dddddd;
        }
    </style>
{%  endblock %}

{% block container_principal %}

    <div class="container">

        <h2>Establecimientos</h2><br>

        {% set cantidad = establecimientos|length %}
        
        <!-- se usa una mezcla del elemento "table" de CSS con la clase "table" de bootstrap 
        tal vez convendrÃ­a usar el grid de boostrap -->

        <table class="table lead bold text-center">
            <tbody>
                {% for i in 0..4 %}
                    <tr>
                        {% for j in 0..5 %}
                            {% set indice = i*6 + j %}
                            {% if indice < cantidad %}
                                <td> 
                                    {% set establecimiento = establecimientos[indice] %}
                                    <a href="{{path('establecimiento_ficha', {'slug':establecimiento.slug})}}"><em>{{ establecimiento.apodo }}</em></a>
                                </td>

                            {% else %}
                                <td></td>
                            {% endif %}
                        {% endfor %}
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}